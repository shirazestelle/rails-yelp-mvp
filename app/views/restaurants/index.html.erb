
<div class="banner home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1520209268518-aec60b8bb5ca?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=b2b04f771779f9ce281cb3e6035f360e&auto=format&fit=crop&w=2384&q=80');">
  <h1 class="text-center">Restaurants</h1>
  <%= link_to "Add a new restaurant", new_restaurant_path, class:"btn btn-primary btn-home" %>
</div>

<div class="container">
  <h3>Our restaurants: </h2>
  <ul class="list-unstyled text-center list">
      <% @restaurants.each do |restaurant| %>
        <li>
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
        </li>
      <% end %>
    </li>
  </ul>

</div>
